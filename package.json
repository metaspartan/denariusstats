{
  "name": "DenariusStats",
  "version": "1.0.0",
  "description": "Statistics for denariusd in NodeJS",
  "repository": {
    "type": "git",
    "url": "https://github.com/carsenk/denariusstats.git"
  },
  "author": "Carsen Klock",
  "license": "MIT",
  "scripts": {
    "start": "node app.js",
    "test": "mocha --reporter spec",
    "postinstall": "npm rebuild node-sass",
    "eslint": "eslint **/*.js"
  },
  "dependencies": {
    "bitcoin": "git://github.com/carsenk/node-bitcoin",
    "body-parser": "^1.20.1",
    "chalk": "^1.1.3",
    "clockwork": "^0.1.4",
    "compression": "^1.6.2",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.18.2",
    "express-session": "^1.14.2",
    "express-status-monitor": "^0.1.5",
    "express-validator": "^3.1.2",
    "lusca": "^1.4.1",
    "moment": "^2.21.0",
    "morgan": "^1.7.0",
    "node-sass-middleware": "^0.11.0",
    "pug": "^2.0.0-beta6",
    "unirest": "^0.5.1",
    "wallet-address-validator": "git://github.com/carsenk/wallet-address-validator"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-chai-friendly": "^0.2.0",
    "eslint-plugin-import": "^2.1.0",
    "mocha": "^3.1.2",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    },
    "env": {
      "jasmine": true,
      "mocha": true,
      "node": true
    },
    "plugins": [
      "chai-friendly"
    ]
  }
}
